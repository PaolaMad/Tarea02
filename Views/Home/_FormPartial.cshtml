<div class="container">

    <form asp-action="News">

        <div class="mb-3">

            <label  for="tittle" class="form-label">Título de la Noticia</label>
            <input  type="text" class="form-control" placeholder="Título" />

        </div>

        <div class="mb-3">

            <label for="dSelect" class="form-label">Categoría</label>
            <select id="dSelect" class="form-select">

                <option class="fw-light">Ecoge una categoría</option>
                <option>Politica</option>
                <option>Deportes</option>
                <option>Economía</option>
                <option>Internacionales</option>
                <option>Salud y Bienestar</option>
                <option>Entretenimiento</option>

            </select>

        </div>

        <div class="mb-3">

            <label for="description" class="form-label">Descripción de la Noticia</label>
            <textarea class="form-control" rows="10"></textarea>

        </div>

        <div class="mb-3">


            <label for="author" class="form-label">Autor de la Noticia</label>
            <input type="text" class="form-control" placeholder="Autor"/>

        </div>

        <div class="mb-3">


            <label for="contact" class="form-label">Contacto (E-mail)</label>
            <input type="email" class="form-control" placeholder="Contacto" />

        </div>

        <div class="mb-3">

            <label for="image" class="form-label">Imagen (URL)</label>
            <input type="text" class="form-control" placeholder="URL de la imagen a mostrar"/>

        </div>

        <div class="mb-3">


            <label for="date" class="form-label">Fecha de Publicación</label>
            <input type="date" class="form-control"/>

        </div>

        <div class="justify-content-center">

            <button class="btn btn-outline-success" type="submit">Crear</button>

        </div>

    </form>

</div>